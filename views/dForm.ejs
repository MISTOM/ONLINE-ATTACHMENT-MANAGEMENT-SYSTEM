  <section class="container-fluid board">
    <header class="container transparent header1">
      <em class="icon"></em>
    </header>

    <main style="margin: auto;" class="container justify-content-center">
        <form action="/dashboard/attachfrm" method="POST" enctype="multipart/form-data">
            <h4>Please fill in the form and attach the letter from institution below.</h4>
              <div class="form-group">
                <input type="text" name="institution" id="institution" class="form-control" required />
                <label class="form-label" for="instit">Name of Institution attached</label>
              </div>
      
              <div class="form-group">
                <input type="text" name="position" id="position" class="form-control" required/>
                <label class="form-label" for="posit">Work Position </label>
              </div>
      
              <div class="row">
                <div class="form-group mb-4 col-lg-4">
                  <input type="date" name="startDate" id="startDate" class="form-control" required/>
                  <label class="form-label" for="sDate">Start Date</label>
                </div>
                <div class="form-group mb-4 col-lg-4">
                  <input type="date" name="endDate" id="endDate" class="form-control" />
                  <label class="form-label" for="eDate">End Date</label>
                </div>
                <div class=" mb-4 col-md-4">
                  <input class="form-control" type="file" name="attachFile" id="attachFile"  />
                  <label class="form-label" for="file" >Upload the letter</label><%= typeof msg !='undefined' ? msg: ''%>
                </div>
              </div>
            
              <div class="form-group mb-4">
               <textarea class="form-control" name="moreInfo" id="moreInfo" placeholder="optional..."></textarea> 
                <label class="form-label" for="txtArea">Additional Information</label>
              </div>
              <input type="submit" class="btn  btn-block mb-4 green" value="Submit">
            </form>
    </main>
  </section>


<footer> <%- include('./partials/_foot') %> </footer>
</body>
